query for folders

select p.FileShare, dp.DriveID, p.id ,p.ProjectComplete
from dbo.Project p
inner join dbo.ProjectShareLookup psl on psl.ProjectID = p.id
inner join dbo.DrivePurpose dp on dp.driveid = psl.DriveID
where p.IsExtraction = 1 and p.ProjectComplete=0;

